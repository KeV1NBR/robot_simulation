#include "agv_sync.h"

#include <vector>

#include "amr/amr_info.h"

using namespace std;

AgvSyncNode::AgvSyncNode() {
    agvSubscriber = nh.subscribe<amr::amr_info>(
        "/amr/robot_state", 1, &AgvSyncNode::agvCallBack, this);
}
AgvSyncNode::~AgvSyncNode() {}

void AgvSyncNode::run() {
    ros::Rate loop_rate(10);

    while (ros::ok()) {
        ros::spinOnce();
        loop_rate.sleep();
    }
}
